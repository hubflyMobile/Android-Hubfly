<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_root_header"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_mainfeed_title"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/title_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.hubfly.ctq.util.RippleView
                android:id="@+id/rv_back"
                android:layout_width="55dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="21dp"
                    android:src="@drawable/ic_home_back_arrow" />
            </com.hubfly.ctq.util.RippleView>

            <com.hubfly.ctq.util.CustomTextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="left"
                android:maxLines="2"
                android:singleLine="false"
                android:text="Quality Assurance Details"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.hubfly.ctq.util.RippleView
                android:id="@+id/rv_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_title_notify"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="invisible" />
            </com.hubfly.ctq.util.RippleView>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/title_sub_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.hubfly.ctq.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Customer Name : "
                    android:textColor="@color/title_sub_txt_name_color"
                    android:textSize="24sp" />

                <com.hubfly.ctq.util.CustomTextView
                    android:id="@+id/txt_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="   Inforsys"
                    android:textColor="@color/title_sub_txt_value_color"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:background="@color/title_sub_txt_name_color"></LinearLayout>

                <com.hubfly.ctq.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:text="Part No  : "
                    android:textColor="@color/title_sub_txt_name_color"
                    android:textSize="24sp" />

                <com.hubfly.ctq.util.CustomTextView
                    android:id="@+id/txt_part_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="   LT02"
                    android:textColor="@color/title_sub_txt_value_color"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:background="@color/title_sub_txt_name_color"></LinearLayout>

                <com.hubfly.ctq.util.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:text="Job Code  : "
                    android:textColor="@color/title_sub_txt_name_color"
                    android:textSize="24sp" />

                <com.hubfly.ctq.util.CustomTextView
                    android:id="@+id/txt_job_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="   MAH S01"
                    android:textColor="@color/title_sub_txt_value_color"

                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/list__border_bg"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/list__border_bg"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.hubfly.ctq.util.RippleView
                        android:id="@+id/rv_ctq_list"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:id="@+id/ll_ctq_click"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@drawable/ic_tab_active"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.hubfly.ctq.util.CustomTextView
                                android:id="@+id/txt_ctq_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_weight=".7"
                                android:gravity="start"
                                android:text="CTQ "
                                android:textColor="@color/list_active_tab"
                                android:textSize="24sp" />

                            <com.hubfly.ctq.util.CustomTextView
                                android:id="@+id/txt_ctq_count"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight=".3"
                                android:background="@color/list__border_bg"
                                android:gravity="center"
                                android:text="7/12"
                                android:textColor="@color/black"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </com.hubfly.ctq.util.RippleView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list__border_bg"></LinearLayout>

                    <com.hubfly.ctq.util.RippleView
                        android:id="@+id/rv_qap_list"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:id="@+id/ll_qap_click"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.hubfly.ctq.util.CustomTextView
                                android:id="@+id/txt_qap_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_weight=".7"
                                android:gravity="start"
                                android:text="QAP "
                                android:textColor="@color/list_normal_tab"
                                android:textSize="24sp" />

                            <com.hubfly.ctq.util.CustomTextView
                                android:id="@+id/txt_qap_count"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight=".3"
                                android:background="@color/list__border_bg"
                                android:gravity="center"
                                android:text="7/12"
                                android:textColor="@color/black"
                                android:textSize="18sp" />


                        </LinearLayout>
                    </com.hubfly.ctq.util.RippleView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/list__border_bg"></LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1.5dp"
                android:layout_weight="1.7"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_ctq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_open_ctq_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_open_qap_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1.5dp"
                android:layout_weight="1.3"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_cto_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/edt_margin_top"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="vertical">

                                <com.hubfly.ctq.util.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/edt_margin_top"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="@dimen/edt_margin_top"
                                    android:text="CTO Value"
                                    android:textColor="@color/title"
                                    android:textSize="@dimen/txt_medium" />

                                <EditText
                                    android:id="@+id/edt_cto_no"
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_edt_rectangle"
                                    android:inputType="number"
                                    android:padding="10dp"
                                    android:text=""
                                    android:textColor="@color/title"
                                    android:textSize="24sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="vertical">

                                <com.hubfly.ctq.util.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/edt_margin_top"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="@dimen/edt_margin_top"
                                    android:text="Remarks"
                                    android:textColor="@color/title"
                                    android:textSize="@dimen/txt_medium" />

                                <EditText
                                    android:id="@+id/edt_remarks"
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_edt_rectangle"
                                    android:inputType="text"
                                    android:padding="10dp"
                                    android:text=""
                                    android:textColor="@color/title"
                                    android:textSize="24sp" />
                            </LinearLayout>

                            <com.hubfly.ctq.util.RippleView
                                android:id="@+id/rv_ctq_submit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="20dp"
                                android:background="@color/list_active_tab"
                                android:padding="10dp">

                                <com.hubfly.ctq.util.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="5"
                                    android:gravity="center"
                                    android:text="Submit"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/txt_medium" />

                            </com.hubfly.ctq.util.RippleView>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qap_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.hubfly.ctq.util.RippleView
                        android:id="@+id/rv_choose"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/ic_edt_rectangle"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_qac_image" />

                            <com.hubfly.ctq.util.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:gravity="center"
                                android:text="Choose Images"
                                android:textColor="@color/title_sub_txt_value_color"
                                android:textSize="@dimen/txt_medium" />

                        </LinearLayout>
                    </com.hubfly.ctq.util.RippleView>

                    <com.hubfly.ctq.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="Choosed Images"
                        android:textColor="@color/title_sub_txt_value_color"
                        android:textSize="@dimen/txt_medium" />

                    <GridView
                        android:id="@+id/gv_images"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:columnWidth="90dp"
                        android:gravity="center"
                        android:horizontalSpacing="10dp"
                        android:numColumns="auto_fit"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="10dp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>