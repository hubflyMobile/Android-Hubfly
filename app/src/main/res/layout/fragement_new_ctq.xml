                        android:textColorHint="@color/white"
                        android:textSize="@dimen/txt_small_medium" />
                </com.hubfly.ctq.util.RippleView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.hubfly.ctq.util.RippleView
                    android:id="@+id/rv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_btn_refresh_bg"
                        android:ems="8"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Cancel"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/txt_small_medium" />
                </com.hubfly.ctq.util.RippleView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.hubfly.ctq.util.RippleView
                    android:id="@+id/rv_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_btn_cancel_bg"
                        android:ems="8"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Refresh"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/txt_small_medium" />
                </com.hubfly.ctq.util.RippleView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
